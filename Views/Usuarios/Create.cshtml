@model ImagenAspNet.Data.Usuario

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>



<div class="card">
    <h1 class="card-header">Subir Imagen</h1>
    <div class="card-body">
        @using (Html.BeginForm("Create", "Usuarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(model => model.nombre, null, new { @class = "form-control input-group-in", placeholder = "Ingresa el Nombre" })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.TextBoxFor(model => model.apellido, null, new { @class = "form-control input-group-in", placeholder = "Ingresa el Apellido" })
                @Html.ValidationMessageFor(model => model.apellido, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="input-group">
                    <input type="file" class="form-control" id="Imagen" name="Imagen" >
                    <button class="btn btn-success" type="submit">Subir Imagen</button>
                </div>
            </div>
        }

    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
